<!DOCTYPE html>
<html>
<head>
    <title>OpenEduPatterns</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Criar a responsividade da página para telas menores -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Não colocar nenhuma tag meta acima deste comentário -->
    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous"> -->
    <!-- Tema opicional Bootstrap -->
    <!-- <link rel="stylesheet" type="text/css" href="css/bootstrap-theme.min.css"> -->
    <!--[Se for o IE 9]-->
    <script src="js/html5shiv.min.js"></script>
    <script src="js/respond.min.js"></script>
    <!-- Mdb Bootstrap -->
    <!-- <link rel="stylesheet" type="text/css" href=""> -->
    <!-- Bibliotca de icones -->
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <!-- Meu CSS --> 
    <link rel="stylesheet" type="text/css" href="css/style_linguagens.css">
    <link rel="stylesheet" type="text/css" href="css/style_footer.css">
    <link rel="stylesheet" type="text/css" href="css/common_styles.css">
    <link rel="stylesheet" type="text/css" href="css/style_criarLinguagem.css">
    <!-- Fonte da página -->
    <link href="https://fonts.googleapis.com/css?family=Work+Sans" rel="stylesheet">
    <!-- Datatables -->
    <link rel="stylesheet" type="text/css" href="css/style_datatable.css">
    <link rel="stylesheet" type="text/css" href="css/style_datatable_effects.css">
    <!-- Font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="/openedupatterns/"><img src="img/logoedu4.png"></a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mynavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <!-- Menu do navbar -->
            <div class="collapse navbar-collapse" id="mynavbar">
                <!-- Barra de pesquisa -->
                <form class="navbar-form navbar-right" method="POST" role="search" action="/generalsearch">
                    <div class="input-group">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="text" class="form-control" name="keyword" placeholder="<%= __('Pesquisa geral') %>">
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-default">
                            <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/openedupatterns/"><%= __('Pagina inicial') %></a></li>
                    <li class="active"><a href="/openedupatterns/languages"><%= __('Linguagens') %></a></li>
                    <li><a href="/openedupatterns/patterns"><%= __('Padrões') %></a></li>
                    <li><a href="/openedupatterns/about"><%= __('Sobre') %></a></li>
                    <% if (loggedIn) { %>
                        <li>
                          <a class="nav-item nav-link dropdown-toggle mr-md-2" href="#" id="bd-versions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" role="button">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            <%= __('Usuário') %>
                            <span class="caret"></span>
                          </a>

                          <!-- Dropdown menu -->
                          <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="bd-versions">
                            <li><a href="/openedupatterns/users/profile"><%= __('Perfil') %></a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/openedupatterns/users/logout"><%= __('Sair') %></a></li>
                          </ul>
                          <!-- End dropdown menu -->

                        </li>
                    <% } else { %>
                        <li><a href="/openedupatterns/users/login"><span class="glyphicon glyphicon-lock"></span><%= __('Entrar') %></a></li>
                    <% } %>
                </ul>
                
            </div>
        </div>
    </nav>  
    <!-- Include breadcrumbs html -->
    <%- include partials/breadcrumb.ejs %>

    <div class="corpo">
        <br>
        <br>
        <div class="container well wrapper">
            <br>
            <div class="row buttonCreateLanguage">
                <a type="button" href="/openedupatterns/languages/create" class="btn btn-default"><%= __('Criar nova Linguagem') %></a>
                <br>
                <br>
                <div class="tooltipInfo">
                  <label><span class="glyphicon glyphicon-question-sign"></span></label>
                  <span class="tooltiptext">
                    <%= __('Para ordenar por Usuário, Nome ou Data clique no cabeçalho') %>
                  </span>
                </div>
            </div>
            <div class="row artigo">
                <table id="languageTable" class="display table-fill">
                    <thead>
                        <tr>
                            <th class="text-left"><%= __('Usuário') %></th>
                            <th class="text-left"><%= __('Noma da Linguagem') %></th>
                            <th class="text-left"><%= __('Data') %></th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- =====================LOOP=========================-->
                        <% linguagens.forEach((linguagens, index) => { %>
                            <tr>
                                <td class="text-left userName"><%= linguagens.name %></a></td>
                                <td class="text-left"><h4><a href="/openedupatterns/languages/<%= linguagens.linguagens_id %>"> <%= linguagens.nome %> </a></h4></td>
                                <td class="text-left"><%= linguagens.monthCreation %>/<%= linguagens.dayCreation %>/<%= linguagens.yearCreation %></td>
                            </tr>
                        <% }); %>
                        <!-- =================================== -->
                    </tbody>
                </table>       
            </div>
        </div>
    </div>
    <br>
    <br>
    <br>

    <!-- Feedback modal -->
        <% if (messages.length > 0) { %>
          <div class="modal fade" id="modal-feedback">
              <div class="modal-dialog modal-md">
                  <div class="modal-content">
                       <div class="modal-body">
                          <div class="row">
                              <div class="col-xs-10 col-xs-offset-1">
                                  <div>
                                        <% messages.forEach((message) => { %>
                                            <h3 id='explanation'><%= message %></h3>
                                        <% }); %>
                                        <button class="btn btn-sm" type="button" class="close" data-dismiss="modal">OK</button>
                                  </div>
                              </div>
                          </div>
                       </div>
                  </div>
              </div>
          </div>
        <% } %>
    <!-- End feedback modal -->
    
    <footer class="text-center">
        <%- include partials/footer.ejs %>
    </footer>
    <!-- SCRIPTS -->
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script type="text/javascript">
        // Feedback modal
        window.onload = function() {
          //Activate modal
          $("#modal-feedback").modal();
        }

        //Limit the size of title
        var languagesTitleArray = $(".artigo h2 a").toArray();
        languagesTitleArray.forEach((eachTitle, index) => {
            if(eachTitle.text.length > 50) {
                var selectedTitle = $(`#language${index-1} h2 a`);
                selectedTitle.text(selectedTitle.text().substring(0,50) + "...");
            }
        });

        //Limit the size of the description
        var languagesArticleArray = $(".languagesText p").toArray();
        languagesArticleArray.forEach((eachLanguage, index) => {
            console.log(eachLanguage.innerText.length); //For some reason, this is not jQeury, this is DOM
            if (eachLanguage.innerText.length > 100) {
                console.log('entrei no 2');
                var languageObject = $(`#languageIdHidden${index}`);
                var languageId = languageObject[0].innerText;
                eachLanguage.innerHTML = eachLanguage.innerText.substring(0, 100) + `... <a href='/openedupatterns/languages/${languageId}'> <%= __('Continuar lendo') %> </a>`;
            }
        });
    </script>
    <!-- Datatables -->
    <script type="text/javascript" src="js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready( function () {
            $('a[data-toggle="tab"]').on( 'shown.bs.tab', function (e) {
                $.fn.dataTable.tables( {visible: true, api: true} ).columns.adjust();
            } );

            $('#languageTable').DataTable( {
                "scrollY": 500,
                "scrollCollapse": true,
                "paging": false,
                "pageLength": 10,
                language: {
                    "decimal":        "",
                    "emptyTable":     "<%= __('Nenhuma linguagem encontrada') %>",
                    "info":           "",
                    "infoEmpty":      "",
                    "infoFiltered":   "",
                    "infoPostFix":    "",
                    "thousands":      ",",
                    "lengthMenu":     "",
                    "loadingRecords": "<%= __('Carregando...') %>",
                    "processing":     "<%= __('Processando...') %>",
                    "search":         "<%= __('Pesquisa') %>",
                    "zeroRecords":    "<%= __('Nenhuma linguagem encontrada') %>",
                    "paginate": {
                        "first":      "<%= __('Primeiro') %>",
                        "last":       "<%= __('Último') %>",
                        "next":       "<%= __('Próximo') %>",
                        "previous":   "<%= __('Anterior') %>"
                    },
                    "aria": {
                        "sortAscending":  ": <%= __('Ordenar colunas em ordem crescente') %>",
                        "sortDescending": ": <%= __('Ordenar colunas em ordem decrescente') %>"
                    }
                }
            } );
        } );
    </script>
</body>
</html>