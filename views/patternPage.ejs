<!DOCTYPE html>
<html>
<head>
    <title>OpenEduPatterns</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Criar a responsividade da página para telas menores -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Não colocar nenhuma tag meta acima deste comentário -->
    <!-- Bootstrap -->
    <link href="../css/bootstrap.min.css" rel="stylesheet">
    <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous"> -->
    <!-- Tema opicional Bootstrap -->
    <!-- <link rel="stylesheet" type="text/css" href="css/bootstrap-theme.min.css"> -->
    <!--[Se for o IE 9]-->
    <script src="../js/html5shiv.min.js"></script>
    <script src="../js/respond.min.js"></script>
    <!-- Mdb Bootstrap -->
    <!-- <link rel="stylesheet" type="text/css" href=""> -->
    <!-- Bibliotca de icones -->
    <link rel="stylesheet" href="../css/font-awesome.min.css">
    <!-- Meu CSS -->  
    <link rel="stylesheet" type="text/css" href="../css/style_patternPage.css">
    <link rel="stylesheet" type="text/css" href="../css/common_styles.css">
    <!-- Fonte da página -->
    <!-- <link href="https://fonts.googleapis.com/css?family=Frank+Ruhl+Libre" rel="stylesheet"> -->
    <link href="https://fonts.googleapis.com/css?family=Work+Sans" rel="stylesheet">
</head>

<body>
    <nav class="navbar navbar-inverse">
        <%- include partials/nav1.ejs %>
    </nav>  

    <br>
    <br>
    <div class="container well">
        <br>
        <br>
        <div class="title">
            <h1><%= __('Exibição de Padrão') %></h1>    
        </div>
        <br>
        <% if (pattern) { %>
            <button style="text-align: center;" onclick="window.open('/patterns/<%= pattern.padroes_id %>/exportpdf', '_blank');" class="btn btn-rounded btn-success btn-md" ><%= __('Exportar PDF') %></button>
            <a class="btn btn-rounded btn-info btn-md" href="/patterns/<%= pattern.padroes_id %>/edit"><%= __('Editar Padrão') %></a>
            <br>
            <br>
            <br>
            <div class="patternInfo">
                <h3><%= __('Autor') %></h3><h4>: <%= owner.name %></h4>
                <br>
                <h3><%= __('Data de criação') %></h3><h4>: <%= pattern.dayCreation %>/<%= pattern.monthCreation %>/<%= pattern.yearCreation %></h4>
                <br>
                <h3><%= __('Visibilidade') %></h3><h4>: <%= pattern.visibilidade %></h4>                
            </div>
            <br>
            <br>
            <div class="well innerWell">
                <!-- LOOP -->
                <% patternContent.forEach((element, index) => { %>
                    <% if (!isAlexander) { %>
                        <h2><%= element.name %></h2>
                    <% } %>

                    <% if (    element.name === "Padrões relacionados" || element.name === "Padrões Relacionados" 
                            || element.name === "Padroes relacionados" || element.name === "Padroes Relacionados" 
                            || element.name === "padrões relacionados" || element.name === "padrões Relacionados" 
                            || element.name === "padroes relacionados" || element.name === "padroes Relacionados"
                            || element.name === "Related Patterns"     || element.name === "related patterns"
                            || element.name === "related Patterns"     || element.name === "Related patterns"
                        ) { %>
                        <div class="relatedPatterns">
                            <!-- <p>| -->
                            <% relatedPatterns.forEach((relatedPattern) => { %>
                                <a class="btn btn-primary btn-sm" href="/patterns/<%= relatedPattern.padroes_id %>"><%- relatedPattern.titulo %></a>
                            <% }); %>
                            <!-- </p>     -->
                        </div>
                    <% } else if (isAlexander && index === 0) { %>
                        <h4><strong> <%- element.content %></strong></h4>
                    <% } else if (isAlexander && (index === 3 || index === 4)) { %> <!-- Problem and Solution of Alexander template has to be bold -->
                        <strong><%- element.content %></strong>
                    <% } else { %>
                        <%- element.content %>
                    <% } %>

                    <% if (isAlexander && index+1 != patternContent.length) { %>
                        <p style="font-style: italic;">***</p>
                    <% } %>

                <% }); %>
                <!-- END LOOP -->
            </div>
            <br>
            <div class="tags">
                <% if (tagsArray[0] != "") { %>
                    <p>Tags: </p>
                    <% tagsArray.forEach((eachTag, index) => { %>
                        <button class="btn btn-info"><%= eachTag %></button>
                    <% }); %>
                    <br>
                <% } %>    
            </div>
            <br>
            <h3><%= __('Comentários') %></h3>
            <br>
            <!-- Add comment -->
            <% if (isLoggedIn) { %>
                <form method="POST" action="/patterns/<%= pattern.padroes_id %>/addcomment">
                    <div class="form-group">
                        <textarea class="form-control" rows="3" id="patternComment" name="patternComment"></textarea>
                    </div>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-rounded btn-info"><%= __('Comentar') %></button>
                </form>
            <% } else { %>
                <h4><%= __('Você não está logado, para comentar efetue o') %> <a href='/users/login'><%= __('Login') %></a>.</h4>
                <br>
            <% } %>

            <!-- Comments here -->
            <% comments.forEach((comment) => { %>
                <div class="well">
                    <h4><%= comment.user_name %>:</h4>
                    <p><%= comment.text %></p>
                </div>
            <% }); %>
            <!-- End of comments -->

        <% } else { %>
            <div class="well">
                <h2><%= __('Este Padrão não existe') %></h2>
            </div>
        <% } %>
        <br>
        <br>
    </div>

    <footer class="text-center">
        <%- include partials/footer.ejs %>
    </footer>
    <!-- SCRIPTS -->
    <script src="../js/jquery.min.js"></script>
    <script src="../js/bootstrap.min.js"></script>
</body>
</html>

