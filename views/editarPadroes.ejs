    <script type="text/javascript" src="../../ckeditor5/ckeditor.js"></script>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <%- include partials/nav2.ejs %>
    </nav>  

    <div class="corpo">
        <div class="container">           
            <div class="col-md-8 col-md-offset-2 col-artigos">
<!-- ==============================================-->
            <div class="criarNovaLinguagem">
                <h1>Edição de Padrão</h1>

                <!-- Display errors -->
                <% if (messages.length > 0) { %>
                    <div class="alert alert-danger">
                        <% messages.forEach((message) => { %>
                            <p><%= message %></p>
                        <% }); %>
                    </div>
                <% } %>
                <!-- End Display errors -->

                <form method="POST" action="">
                    
                    <div class="form-group">
                        <div class="tooltipInfo" id="visibilidadeId">
                            <label for="visibilidade"><%= __('Visibilidade') %> <span class="glyphicon glyphicon-question-sign"></span></label>
                            <span class="tooltiptext">
                                <%= __('Caso escolha privado apenas você poderá visualizar') %>
                            </span>
                        </div>
                        <select class="form-control" id="visibilidade" name="visibilidade">
                        <option>Público</option>
                            <option>Privado</option>
                        </select>
                    </div>

                    <!-- Loop -->
                    <% patternContent.forEach((element) => { %>
                        <% if (element.name === "Padrões relacionados" || element.name === "Padrões Relacionados" || element.name === "Padroes relacionados" || element.name === "Padroes Relacionados" || element.name === "padrões relacionados" || element.name === "padrões Relacionados" || element.name === "padroes relacionados" || element.name === "padroes Relacionados") { %>
                            
                            <% if(relatedPatterns.length > 0) { %>
                                <label>Padrões relacionados antes da edição do padrão</label>
                                <h4>|
                                    <% relatedPatterns.forEach((relatedPattern) => { %>
                                        <a href="/patterns/<%= relatedPattern.padroes_id %>"><%- relatedPattern.titulo %></a> |
                                    <% }); %>
                                </h4>
                            <% } %>


                            <h3>Faça aqui seu novo relacionamento de Padrões</h3>
                            <% if (patternsOfTheSameLanguage) { %>
                                <label>Padrões pertencentes à mesma linguagem</label>  
                                <% patternsOfTheSameLanguage.forEach((eachPattern) => { %>
                                    <p><input type='checkbox' name='patterns2Relate' value='<%= eachPattern.padroes_id %>'> <%- eachPattern.titulo %></p>
                                <% }); %>
                            <% } %>

                            <label>Padrões públicos</label>
                            <input class="form-control" type="hidden" name="elementName[]" value="Padrões relacionados">
                            <input class="form-control" type="hidden" id="elementContent[]" name="elementContent[]" value="This content is not a text, it's a relathionship in MySQL, therefore it can't be displayed here.">
                            <% patterns.forEach((pattern) => { %>
                                <p><input type='checkbox' name='patterns2Relate' value='<%= pattern.padroes_id %>'> <%- pattern.titulo %></p>
                            <% }) %>
                            <br>
                        <% } else { %>
                            <label><%= element.name %></label>
                            <input class="form-control" type="hidden" name="elementName[]" value="<%= element.name %>">
                            <textarea class="form-control ckeditor" id="elementContent[]" name="elementContent[]" rows="4" placeholder="Digite aqui o conteúdo deste elemento"><%= element.content %></textarea>
                        <% } %>
                        <br>
                    <% }); %>
                    <!-- End Loop -->

                    <div class="form-group">
                        <div class="tooltipInfo">
                          <label for="tags"><%= __('Tags (separe-as pressionando Enter ou com uma vírgula)') %> <span class="glyphicon glyphicon-question-sign"></span></label>
                          <span class="tooltiptext">
                              <%= __('Adicione tags que relacionem o assunto para facilitar as buscas') %>
                          </span>
                        </div>
                        <br>
                        <input type="text" id="tags" name="tags" value="<%= tagsString %>" data-role="tagsinput">
                    </div>
                    <br>
                  


                    <a href="javascript:window.location.reload(true)">
                      <button type="submit" class="btn btn-primary">Salvar alterações</button>
                    </a>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button onclick="window.location.href='/padroes'" class="btn btn-danger">Cancelar</button>    
                </form>
                <br>
                <br>
                <form method="POST" action="/patterns/<%= patternId %>/delete">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-danger btn-lg">Deletar Padrão</button>    
                </form>
            </div>

<!-- =================================== -->

            </div>
        </div>
    </div>

    <br>
    <br>
    <br>
    <footer class="text-center">
        <%- include partials/footer.ejs %>
    </footer>
    <!-- SCRIPTS -->
    <script src="../../js/jquery.min.js"></script>
    <script src="../../js/bootstrap.min.js"></script>
    <script src="../../js/bootstrap-tagsinput.min.js"></script>
    <script type="text/javascript">
        window.onload = function() {
          var editorsArray = document.querySelectorAll( '.ckeditor' );

          editorsArray.forEach(eachEditor => {
            ClassicEditor
            .create(eachEditor, {
              removePlugins: [ 'MediaEmbed', 'Image', 'ImageCaption', 'ImageStyle', 'ImageToolbar', 'ImageUpload' ],
            })
            .catch( error => {
              console.error( error );
            });
          });
        }
    </script>
</body>
</html>


