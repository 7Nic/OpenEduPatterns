<!DOCTYPE html>
<html>
<head>
    <title>OpenEduPatterns</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Criar a responsividade da página para telas menores -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Não colocar nenhuma tag meta acima deste comentário -->
    <!-- Bootstrap -->
    <link href="../css/bootstrap.min.css" rel="stylesheet">
    <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous"> -->
    <!-- Tema opicional Bootstrap -->
    <!-- <link rel="stylesheet" type="text/css" href="css/bootstrap-theme.min.css"> -->
    <!--[Se for o IE 9]-->
    <script src="../js/html5shiv.min.js"></script>
    <script src="../js/respond.min.js"></script>
    <!-- Mdb Bootstrap -->
    <!-- <link rel="stylesheet" type="text/css" href=""> -->
    <!-- Bibliotca de icones -->
    <link rel="stylesheet" href="../css/font-awesome.min.css">
    <!-- Meu CSS -->  
    <link rel="stylesheet" type="text/css" href="../css/style_languagePage.css">
    <link rel="stylesheet" type="text/css" href="../css/common_styles.css">
    <!-- Fonte da página -->
    <link href="https://fonts.googleapis.com/css?family=Work+Sans" rel="stylesheet">
</head>

<body>
    <nav class="navbar navbar-inverse">
        <%- include partials/nav1.ejs %>
    </nav>  
    <br>
    <br>
    <div class="container well">
        <div class="title">
            <h1><%= __('Exibição de Linguagem') %></h1>    
        </div>
        <br>
        <% if (language) { %>
            <a class="btn btn-rounded btn-info" href="/languages/<%= language.linguagens_id %>/edit"><%= __('Editar Linguagem') %></a>
            <br>
            <br>
            <br>
            <div class="patternInfo">
                <h3><%= __('Autor') %></h3><h4>: <%= owner.name %></h4>
                <br>
                <h3><%= __('Data de criação') %></h3><h4>: <%= language.dayCreation %>/<%= language.monthCreation %>/<%= language.yearCreation %></h4>
                <br>
                <h3><%= __('Visibilidade') %></h3><h4>: <%= language.visibilidade %></h4>                
            </div>
            <br>
            <br>
            <div class="container well">
                <h2><%= language.nome %></h2>
                <br>
                <p><%= language.descricao %></p>
                <br>
                <h2><%= __('Padrões relacionados') %></h2>
                <% if (padroesRelacionados.length > 0) { %>
                    <br>
                    <div class="relatedPatterns">
                        <% padroesRelacionados.forEach((relatedPattern) => { %>
                            <h4><a class="btn btn-primary btn-sm" href="/patterns/<%= relatedPattern.padroes_id %>"><%- relatedPattern.titulo %></a></h4>
                        <% }); %>    
                    </div>
                    <br>
                <% } else { %>
                    <p><%= __('Esta linguagem não possui padrões relacionados') %></p>
                <% } %>

                <h2><%= __('Linguagens relacionadas') %></h2>
                <% if (relatedLanguages.length > 0) { %>
                        <br>      
                        <div class="relatedLanguages">
                            <% relatedLanguages.forEach((eachLanguage, index) => { %>
                                <h4><a class="btn btn-primary btn-sm" href="/languages/<%= eachLanguage.linguagens_id %>"> <%= eachLanguage.nome %> </a></h4>
                            <% }); %>    
                        </div>                      
                        <br>
                <% } else {%>
                    <%= __('Não há relacionamentos') %>
                    <br>
                    <br>
                <% } %>
            </div>

            <div class="tags">
                <% if (tagsArray[0] != "") { %>
                    <p>Tags: </p>
                    <% tagsArray.forEach((eachTag, index) => { %>
                        <button class="btn btn-info"><%= eachTag %></button>
                    <% }); %>
                    <br>
                <% } %>    
            </div>
            
            <h3><%= __('Comentários') %></h3>
            <br>
            <!-- Add comment -->
            <% if (isLoggedIn) { %>
                <form method="POST" action="/languages/<%= language.linguagens_id %>/addcomment">
                    <div class="form-group">
                        <textarea class="form-control" rows="3" id="languageComment" name="languageComment"></textarea>
                    </div>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-rounded btn-info"><%= __('Comentar') %></button>
                </form>
            <% } else { %>
                <h4><%= __('Você não está logado, para comentar efetue o') %> <a href='/users/login'><%= __('Login') %></a>.</h4>
                <br>
            <% } %>

            <!-- Comments here -->
            <% comments.forEach((comment) => { %>
                <div class="well">
                    <h4><%= comment.user_name %>:</h4>
                    <p><%= comment.text %></p>
                </div>
            <% }); %>
            <!-- End of comments -->


        <% } else { %>
            <div class="well">
                <h2><%= __('Esta linguagem não existe') %></h2>
            </div>
        <% } %>
        <br>        
    </div>

    <footer class="text-center">
        <%- include partials/footer.ejs %>
    </footer>
    <!-- SCRIPTS -->
    <script src="../js/jquery.min.js"></script>
    <script src="../js/bootstrap.min.js"></script>
</body>
</html>

