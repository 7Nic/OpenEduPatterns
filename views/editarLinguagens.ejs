    <!-- <link rel="stylesheet" type="text/css" href="css/bootstrap-theme.min.css"> -->
    <!--[Se for o IE 9]-->
    <script src="../../js/html5shiv.min.js"></script>
    <script src="../../js/respond.min.js"></script>
    <!-- Mdb Bootstrap -->
    <!-- <link rel="stylesheet" type="text/css" href=""> -->
    <!-- Bibliotca de icones -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Meu CSS -->  
    <link rel="stylesheet" type="text/css" href="../../css/style_editLanguages.css">
    <!-- Fonte da página -->
    <!-- <link href="https://fonts.googleapis.com/css?family=Frank+Ruhl+Libre" rel="stylesheet"> -->
    <link href="https://fonts.googleapis.com/css?family=Work+Sans" rel="stylesheet">
    <!-- Datatables -->
    <link rel="stylesheet" type="text/css" href="../../css/style_datatable.css">
</head>
<body>
    <nav class="navbar navbar-inverse">
        <%- include partials/nav2.ejs %>
    </nav>  
    <br>
    <br>

    <div class="corpo">
        <div class="container">
            
<!-- ==============================================-->
            <div class="editarLinguagem">
                <h1><%= __('Edição de Linguagem') %></h1>
                <!-- Display errors -->
                <% if (messages.length > 0) { %>
                    <div class="alert alert-danger">
                        <% messages.forEach((message) => { %>
                            <p><%= message %></p>
                        <% }); %>
                    </div>
                <% } %>
                <!-- End Display errors -->

                <!-- LOOPS DA RELAÇÃO ENTRE LINGUAGEM-PADRÃO-->
                <br>
                <!-- ================================================ -->
                <div class="tooltipInfo">
                    <h2><%= __('Relacionamento entre Linguagens e Padrões') %> <span class="glyphicon glyphicon-question-sign"></h2>
                    <span class="tooltiptext">
                        <%= __("Selecione os novos padrões a serem relacionados ou clique no X para remover uma relação") %>
                      </span>
                </div>
                <% if (padroesRelacionados.length > 0) { %>
                    <div class="form-group">
                        <label for=""><%= __('Padrões relacionados a essa Linguagem') %> ADICIONAR UM BOTÃO PARA RETIRAR AS RELAÇÕES EM VEZ DE APAGAR TUDO TODA VEZ</label>
                        <% padroesRelacionados.forEach((padraoRelacionado) => { %>
                                <h4><a href="/patterns/<%= padraoRelacionado.padroes_id %>"><%- padraoRelacionado.titulo %></a></h4>
                        <% }); %>
                    </div>
                <% } %>
                
                <!-- ================================================ -->
                
                <form method="POST" action="">
                    <h4><%= __("Relacionamento de padrões") %></h4>
                    <table id="patternTable" class="display">
                        <thead>
                          <tr>
                              <th><%= __('Nome do Padrão') %></th>
                          </tr>
                        </thead>
                        <tbody>
                          <!-- =====================LOOP=========================-->
                          <% patterns.forEach((eachPattern, index) => { %>
                              <tr>  
                                <td><input type="checkbox" name="patterns2Relate" value="<%= eachPattern.padroes_id %>"><h4><%- eachPattern.titulo %></h4></td>
                              </tr>
                          <% }); %>
                          <!-- ================================================= -->
                        </tbody>
                    </table>    

                    <div class="tooltipInfo">
                        <h2><%= __('Relacionamento entre Linguagens') %> <span class="glyphicon glyphicon-question-sign"></h2>
                        <span class="tooltiptext">
                            <%= __("Selecione as novas linguagens a serem relacionados e clique no X para remover uma relação") %>
                          </span>
                    </div>

                    <% if (relatedLanguages.length > 0) { %>
                        <label><%= __('Linguagens relacionadas antes da edição') %> ADICIONAR UM BOTÃO PARA RETIRAR AS RELAÇÕES EM VEZ DE APAGAR TUDO TODA VEZ</label>
                        <h4>|
                            <% relatedLanguages.forEach((relatedLanguage) => { %>
                                <a href="/languages/<%= relatedLanguage.linguagens_id %>"><%= relatedLanguage.nome %></a> |
                            <% }); %>
                        </h4>
                    <% } %>
                    <label><%= __('Novo relacionamento de Linguagens') %></label>
                    <table id="languageTable" class="display">
                        <thead>
                            <tr>
                                <th><%= __('Noma da Linguagem') %></th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- =====================LOOP=========================-->
                            <% languages.forEach((eachLanguage, index) => { %>
                                <tr>
                                    <td><input type="checkbox" name="languages2Relate" value="<%= eachLanguage.linguagens_id %>"> <%= eachLanguage.nome %></td>
                                </tr>
                            <% }); %>
                            <!-- ================================================= -->
                        </tbody>
                    </table>       
                    <div class="tooltipInfo">
                        <h2><%= __('Propriedades da Linguagem') %> <span class="glyphicon glyphicon-question-sign"></h2>
                        <span class="tooltiptext">
                            <%= __("Edite aqui as informações básicas da Linguagem") %>
                          </span>
                    </div>
                    <div class="form-group">
                      <label for="nomeLinguagem"><%= __('Nome da Linguagem') %></label>
                      <input type="text" class="form-control" id="nomeLinguagem" name="nomeLinguagem" value="<%= linguagem.nome %>">
                    </div>
                    <div class="form-group">
                      <label for="visibilidade"><%= __('Visibilidade') %></label>
                      <select class="form-control" id="visibilidade"  name="visibilidade">
                        <option><%= __('Público') %></option>
                        <option><%= __('Privado') %></option>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="descricaoLinguagem"><%= __('Descrição da Linguagem') %></label>
                      <textarea class="form-control" id="descricaoLinguagem" name="descricaoLinguagem" rows="4"><%= linguagem.descricao %></textarea>
                    </div>
                    <div class="form-group">
                        <div class="tooltipInfo">
                          <label for="tags"><%= __('Tags (separe-as pressionando Enter ou com uma vírgula)') %> <span class="glyphicon glyphicon-question-sign"></span></label>
                          <span class="tooltiptext">
                              <%= __('Adicione tags que relacionem o assunto para facilitar as buscas') %>
                          </span>
                        </div>
                        <br>
                        <input type="text" id="tags" name="tags" value="<%= tagsString %>" data-role="tagsinput">
                    </div>
                    <br>
                    <br>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-primary"><%= __('Salvar propriedades') %></button>
                    <button onclick="window.location.href='/linguagens'" class="btn btn-danger"><%= __('Cancelar') %></button>    
                </form>
                <br>
                <br>
                <form method="POST" action="/languages/<%= linguagem.linguagens_id %>/delete">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-danger btn-lg"><%= __('Deletar Linguagem') %></button>    
                </form>
                <br>
            </div>

<!-- =================================== -->

            
        </div>
    </div>

    <br>
    <br>
    <br>
    <footer class="text-center">
        <%- include partials/footer.ejs %>
    </footer>
    <!-- SCRIPTS -->
    <script src="../../dataCollectors/collectDataLogin.js"></script>
    <script src="../../js/jquery.min.js"></script>
    <script src="../../js/bootstrap.min.js"></script>
    <script src="../../js/bootstrap-tagsinput.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready( function () {
            $('a[data-toggle="tab"]').on( 'shown.bs.tab', function (e) {
                $.fn.dataTable.tables( {visible: true, api: true} ).columns.adjust();
            } );

            $('#patternTable').DataTable( {
                "pageLength": 4,
                "scrollY": 500,
                "scrollCollapse": true,
                "paging": false,
                language: {
                    "decimal":        "",
                    "emptyTable":     "<%= __('Nenhuma linguagem encontrada') %>",
                    "info":           "",
                    "infoEmpty":      "",
                    "infoFiltered":   "",
                    "infoPostFix":    "",
                    "thousands":      ",",
                    "lengthMenu":     "",
                    "loadingRecords": "<%= __('Carregando...') %>",
                    "processing":     "<%= __('Processando...') %>",
                    "search":         "<%= __('Pesquisa') %>",
                    "zeroRecords":    "<%= __('Nenhuma linguagem encontrada') %>",
                    "paginate": {
                        "first":      "<%= __('Primeiro') %>",
                        "last":       "<%= __('Último') %>",
                        "next":       "<%= __('Próximo') %>",
                        "previous":   "<%= __('Anterior') %>"
                    },
                    "aria": {
                        "sortAscending":  ": <%= __('Ordenar colunas em ordem crescente') %>",
                        "sortDescending": ": <%= __('Ordenar colunas em ordem decrescente') %>"
                    }
                }
            } );

            $('#languageTable').DataTable( {
                "pageLength": 6,
                "scrollY": 300,
                "scrollCollapse": true,
                "paging": false,
                language: {
                    "decimal":        "",
                    "emptyTable":     "<%= __('Nenhuma linguagem encontrada') %>",
                    "info":           "",
                    "infoEmpty":      "",
                    "infoFiltered":   "",
                    "infoPostFix":    "",
                    "thousands":      ",",
                    "lengthMenu":     "",
                    "loadingRecords": "<%= __('Carregando...') %>",
                    "processing":     "<%= __('Processando...') %>",
                    "search":         "<%= __('Pesquisa') %>",
                    "zeroRecords":    "<%= __('Nenhuma linguagem encontrada') %>",
                    "paginate": {
                        "first":      "<%= __('Primeiro') %>",
                        "last":       "<%= __('Último') %>",
                        "next":       "<%= __('Próximo') %>",
                        "previous":   "<%= __('Anterior') %>"
                    },
                    "aria": {
                        "sortAscending":  ": <%= __('Ordenar colunas em ordem crescente') %>",
                        "sortDescending": ": <%= __('Ordenar colunas em ordem decrescente') %>"
                    }
                }
            } );
        } );
    </script>
</body>
</html>