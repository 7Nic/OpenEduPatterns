<body>
    <nav class="navbar navbar-inverse">
        <%- include partials/nav2.ejs %>
    </nav>  
    <br>
    <br>

    <div class="corpo">
        <div class="container">
            <div class="col-md-8 col-md-offset-2 col-artigos">
<!-- ==============================================-->
            <div class="editarLinguagem">
                <h1><%= __('Edição de Linguagem') %></h1>
                <!-- Display errors -->
                <% if (messages.length > 0) { %>
                    <div class="alert alert-danger">
                        <% messages.forEach((message) => { %>
                            <p><%= message %></p>
                        <% }); %>
                    </div>
                <% } %>
                <!-- End Display errors -->

                <!-- LOOPS DA RELAÇÃO ENTRE LINGUAGEM-PADRÃO-->
                <br>
                <!-- ================================================ -->
                <div class="tooltipInfo">
                    <h2><%= __('Relacionamento entre Linguagens e Padrões') %> <span class="glyphicon glyphicon-question-sign"></h2>
                    <span class="tooltiptext">
                        <%= __("Selecione os novos padrões a serem relacionados ou clique no X para remover uma relação") %>
                      </span>
                </div>
                <% if (padroesRelacionados.length > 0) { %>
                    <div class="form-group">
                        <label for=""><%= __('Padrões relacionados a essa Linguagem') %> ADICIONAR UM BOTÃO PARA RETIRAR AS RELAÇÕES EM VEZ DE APAGAR TUDO TODA VEZ</label>
                        <% padroesRelacionados.forEach((padraoRelacionado) => { %>
                                <h4><a href="/patterns/<%= padraoRelacionado.padroes_id %>"><%- padraoRelacionado.titulo %></a></h4>
                        <% }); %>
                    </div>
                <% } %>
                
                <!-- COLE INICIANDO AQUI -->

                <!-- E TERMINANDO AQUI -->
                <!-- ================================================ -->
                
                <form method="POST" action="">
                    <div class="form-group">
                        <h4><%= __("Relacionamento de padrões") %> (INSERIR UM SEARCH AQUI)</h4>
                        <% patterns.forEach((eachPattern) => { %>
                            <p><input type="checkbox" name="patterns2Relate" value="<%= eachPattern.padroes_id %>"> <%- eachPattern.titulo %></p>
                        <% }); %>  
                    </div>


                    <div class="tooltipInfo">
                        <h2><%= __('Relacionamento entre Linguagens') %> <span class="glyphicon glyphicon-question-sign"></h2>
                        <span class="tooltiptext">
                            <%= __("Selecione as novas linguagens a serem relacionados e clique no X para remover uma relação") %>
                          </span>
                    </div>

                    <% if (relatedLanguages.length > 0) { %>
                        <label><%= __('Linguagens relacionadas antes da edição') %> ADICIONAR UM BOTÃO PARA RETIRAR AS RELAÇÕES EM VEZ DE APAGAR TUDO TODA VEZ</label>
                        <h4>|
                            <% relatedLanguages.forEach((relatedLanguage) => { %>
                                <a href="/languages/<%= relatedLanguage.linguagens_id %>"><%= relatedLanguage.nome %></a> |
                            <% }); %>
                        </h4>
                    <% } %>
                    <label><%= __('Novo relacionamento de Linguagens') %></label>
                    <% languages.forEach((language) => { %>
                        <p><input type="checkbox" name="languages2Relate" value="<%= language.linguagens_id %>"> <%= language.nome %></p>
                    <% }); %>
                    <br>
                    <br>  
                    <div class="tooltipInfo">
                        <h2><%= __('Propriedades da Linguagem') %> <span class="glyphicon glyphicon-question-sign"></h2>
                        <span class="tooltiptext">
                            <%= __("Edite aqui as informações básicas da Linguagem") %>
                          </span>
                    </div>
                    <div class="form-group">
                      <label for="nomeLinguagem"><%= __('Nome da Linguagem') %></label>
                      <input type="text" class="form-control" id="nomeLinguagem" name="nomeLinguagem" value="<%= linguagem.nome %>">
                    </div>
                    <div class="form-group">
                      <label for="visibilidade"><%= __('Visibilidade') %></label>
                      <select class="form-control" id="visibilidade"  name="visibilidade">
                        <option><%= __('Público') %></option>
                        <option><%= __('Privado') %></option>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="descricaoLinguagem"><%= __('Descrição da Linguagem') %></label>
                      <textarea class="form-control" id="descricaoLinguagem" name="descricaoLinguagem" rows="4"><%= linguagem.descricao %></textarea>
                    </div>
                    <div class="form-group">
                        <div class="tooltipInfo">
                          <label for="tags"><%= __('Tags (separe-as pressionando Enter ou com uma vírgula)') %> <span class="glyphicon glyphicon-question-sign"></span></label>
                          <span class="tooltiptext">
                              <%= __('Adicione tags que relacionem o assunto para facilitar as buscas') %>
                          </span>
                        </div>
                        <br>
                        <input type="text" id="tags" name="tags" value="<%= tagsString %>" data-role="tagsinput">
                    </div>
                    <br>
                    <br>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-primary"><%= __('Salvar propriedades') %></button>
                    <button onclick="window.location.href='/linguagens'" class="btn btn-danger"><%= __('Cancelar') %></button>    
                </form>
                <br>
                <br>
                <form method="POST" action="/languages/<%= linguagem.linguagens_id %>/delete">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-danger btn-lg"><%= __('Deletar Linguagem') %></button>    
                </form>
                <br>
            </div>

<!-- =================================== -->

            </div>
        </div>
    </div>

    <br>
    <br>
    <br>
    <footer class="text-center">
        <%- include partials/footer.ejs %>
    </footer>
    <!-- SCRIPTS -->
    <script src="../../dataCollectors/collectDataLogin.js"></script>
    <script src="../../js/jquery.min.js"></script>
    <script src="../../js/bootstrap.min.js"></script>
    <script src="../../js/bootstrap-tagsinput.min.js"></script>
</body>
</html>


