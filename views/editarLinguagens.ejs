<body>
    <nav class="navbar navbar-inverse">
        <%- include partials/nav2.ejs %>
    </nav>  
    <br>
    <br>

    <div class="corpo">
        <div class="container">
            <div class="col-md-8 col-md-offset-2 col-artigos">
<!-- ==============================================-->
            <div class="editarLinguagem">
                <h1><%= __('Edição de Linguagem') %></h1>
                <!-- Display errors -->
                <% if (messages.length > 0) { %>
                    <div class="alert alert-danger">
                        <% messages.forEach((message) => { %>
                            <p><%= message %></p>
                        <% }); %>
                    </div>
                <% } %>
                <!-- End Display errors -->

                <!-- LOOPS DA RELAÇÃO ENTRE LINGUAGEM-PADRÃO-->
                <br>
                <!-- ================================================ -->
                <h2><%= __('Relacionamento entre Linguagens e Padrões') %></h2>
                <div class="row artigo">
                    <label for=""><%= __('Padrões relacionados a essa Linguagem') %></label>
                    <% padroesRelacionados.forEach((padroesRelacionados) => { %>
                            <h4><a href="/building"><%- padroesRelacionados.titulo %></a></h4>
                    <% }); %>
                </div>

                <form method="POST" action="/languages/<%= linguagem.linguagens_id %>/edit/unrelatepattern">
                    <label for=""><%= __('Remover padrões desta linguagem') %></label>
                    <select class="form-control" id="tituloPadraoDesrelacionado"  name="tituloPadraoDesrelacionado">
                        <% padroesRelacionados.forEach((padroesRelacionados) => { %>
                          <option><%- padroesRelacionados.titulo %></option>
                        <% }); %>    
                    </select>
                    <br>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn btn-danger"><%= __('Excluir relacionamento') %></button>
                </form>

                <br>
                <br>
                <form method="POST" action="/languages/<%= linguagem.linguagens_id %>/edit/relatepattern">
                    <label for=""><%= __('Adicionar outros padrões a essa Linguagem (aqui entrará uma ferramenta de busca)') %></label>  
                    <div class="form-group">
                        <select class="form-control" id="tituloPadraoRelacionado" name="tituloPadraoRelacionado">
                            <% todosPadroes.forEach((todosPadroes) => { %>
                                <option><%- todosPadroes.titulo %></option>
                            <% }); %>
                        </select>
                        <br>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn btn-success"><%= __('Adicionar relacionamento') %></button>
                    </div>
                </form>
                <br>
                <br>
                <!-- ================================================ -->
                





                
                
                <form method="POST" action="">
                    <h2><%= __('Relacionamento entre Linguagens') %></h2>
                    <% if (relatedLanguages.length > 0) { %>
                        <label><%= __('Linguagens relacionadas antes da edição') %></label>
                        <h4>|
                            <% relatedLanguages.forEach((relatedLanguage) => { %>
                                <a href="/languages/<%= relatedLanguage.linguagens_id %>"><%= relatedLanguage.nome %></a> |
                            <% }); %>
                        </h4>
                    <% } %>
                    <label><%= __('Novo relacionamento de Linguagens') %></label>
                    <% languages.forEach((language) => { %>
                        <p><input type="checkbox" name="languages2Relate" value="<%= language.linguagens_id %>"> <%= language.nome %></p>
                    <% }); %>
                    <br>
                    <br>  
                    <h2><%= __('Propriedades da Linguagem') %></h2>
                    <div class="form-group">
                      <label for="nomeLinguagem"><%= __('Nome da Linguagem') %></label>
                      <input type="text" class="form-control" id="nomeLinguagem" name="nomeLinguagem" value="<%= linguagem.nome %>">
                    </div>
                    <div class="form-group">
                      <label for="visibilidade"><%= __('Visibilidade') %></label>
                      <select class="form-control" id="visibilidade"  name="visibilidade">
                        <option><%= __('Público') %></option>
                        <option><%= __('Privado') %></option>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="descricaoLinguagem"><%= __('Descrição da Linguagem') %></label>
                      <textarea class="form-control" id="descricaoLinguagem" name="descricaoLinguagem" rows="4"><%= linguagem.descricao %></textarea>
                    </div>
                    <br>
                    <br>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-primary"><%= __('Salvar propriedades') %></button>
                    <button onclick="window.location.href='/linguagens'" class="btn btn-danger"><%= __('Cancelar') %></button>    
                </form>
                <br>
                <br>
                <form method="POST" action="/languages/<%= linguagem.linguagens_id %>/delete">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-danger btn-lg"><%= __('Deletar Linguagem') %></button>    
                </form>
                <br>
            </div>

<!-- =================================== -->

            </div>
        </div>
    </div>

    <br>
    <br>
    <br>
    <footer class="text-center">
        <%- include partials/footer.ejs %>
    </footer>
    <!-- SCRIPTS -->
    <script src="../../dataCollectors/collectDataLogin.js"></script>
    <script src="../../js/jquery.min.js"></script>
    <script src="../../js/bootstrap.min.js"></script>
</body>
