<!DOCTYPE html>
<html>
<head>
    <title>Home - OpenEduPatterns!</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Criar a responsividade da página para telas menores -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Não colocar nenhuma tag meta acima deste comentário -->
    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous"> -->
    <!-- Tema opicional Bootstrap -->
    <!-- <link rel="stylesheet" type="text/css" href="css/bootstrap-theme.min.css"> -->
    <!--[Se for o IE 9]-->
    <script src="js/html5shiv.min.js"></script>
    <script src="js/respond.min.js"></script>
    <!-- Mdb Bootstrap -->
    <!-- <link rel="stylesheet" type="text/css" href=""> -->
    <!-- Bibliotca de icones -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Meu CSS -->  
    <link rel="stylesheet" type="text/css" href="css/style_sobre.css">
    <!-- Fonte da página -->
    <!-- <link href="https://fonts.googleapis.com/css?family=Frank+Ruhl+Libre" rel="stylesheet"> -->
    <link href="https://fonts.googleapis.com/css?family=Work+Sans" rel="stylesheet">
</head>

<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="/"><img src="img/logoedu4.png"></a>
                <!-- <a href=""><img src="img/logoLab.jpg"></a> -->
                <!-- <a href=""><img src="img/logo.png"></a> -->
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mynavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <!-- Menu do navbar -->
            <div class="collapse navbar-collapse" id="mynavbar">
                <!-- Barra de pesquisa -->
                <form class="navbar-form navbar-right" method="POST" role="search" action="/generalsearch">
                    <div class="input-group">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="text" class="form-control" name="keyword" placeholder="Pesquisar">
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-default">
                            <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/">Página inicial</a></li>
                    <li><a href="/languages">Linguagens</a></li>
                    <li><a href="/patterns">Padrões</a></li>
                    <li><a href="/about">Sobre</a></li>
                    <% if (loggedIn) { %>
                        <li>
                          <a class="nav-item nav-link dropdown-toggle mr-md-2" href="#" id="bd-versions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" role="button">
                            <i class="fa fa-user" aria-hidden="true"></i>
                                Usuário
                            <span class="caret"></span>
                          </a>

                          <!-- Dropdown menu -->
                          <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="bd-versions">
                            <li><a href="/users/profile">Perfil</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/users/logout">Sair</a></li>
                          </ul>
                          <!-- End dropdown menu -->

                        </li>
                    <% } else { %>
                        <li><a href="/users/login"><span class="glyphicon glyphicon-lock"></span>Entrar</a></li>
                    <% } %>
                </ul>

            </div>
        </div>
    </nav>  

    <div class="container">
        <br>
        <br>
        <h1>Busca refinada de Padrões</h1>
        <p>Filtros:</p>
        <form method="POST" action="/filteredpatternsearch">
            <input type="checkbox" name="Nome"> Nome
            <input type="checkbox" name="Contexto"> Contexto
            <input type="checkbox" name="Figura"> Figura
            <input type="checkbox" name="Problema"> Problema
            <input type="checkbox" name="Solucao"> Solução
            <input type="checkbox" name="DiagramaDaSolucao"> Diagrama da Solução
            <input type="checkbox" name="Descricao"> Descrição
            <input type="checkbox" name="Alias"> Alias
            <input type="checkbox" name="Forças"> Forças
            <input type="checkbox" name="Exemplo"> Exemplo
            <input type="checkbox" name="UsosConhecidos"> Usos conhecidos
            <input type="checkbox" name="PadroesRelacionados"> Padrões relacionados
            <input type="checkbox" name="ContextoResultante"> Contexto resultante
            <input type="checkbox" name="Rationale"> Rationale
            <br>
            <br>
            <input type="text" placeholder="Busca refinada" name="keyword2">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn btn-info btn-sm" type="submit">Pesquisar</button>
        </form>
        <div class="well">
            <% if (patterns.length > 0) { %>
                <h2>Padrões</h2>
                <% patterns.forEach(eachPattern => { %>
                    <h3><a href="/patterns/<%= eachPattern.padroes_id %>"><%- eachPattern.titulo %></a></h3>
                <% }); %>
            <% } %>

            <% if (patterns.length === 0) { %>
                <p>Não foram encontrados resultados para esta pesquisa </p>
            <% } %>
        </div>
        <br>
        <br>
    </div>

    <footer class="text-center">
        <%- include partials/footer.ejs %>
    </footer>
    <!-- SCRIPTS -->
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
</body>
</html>

